{% sw_extends '@Storefront/storefront/component/account/login.html.twig' %}

{% block component_account_login_header %}
	<h2 class="card-title">
		{{ "faq.loginHeader"|trans|sw_sanitize }}
	</h2>
{% endblock %}

{% block component_account_login_form_description %}
	<p class="login-form-description">
		{{ "faq.loginDescription"|trans|sw_sanitize }}
		<a href="{{ path('frontend.account.login.page') }}"
			title="{{ "faq.loginRegister"|trans|striptags }}">
			{{ "faq.loginRegister"|trans|sw_sanitize }}
		</a>
	</p>
{% endblock %}

{% block component_account_login_form_redirect %}
	<input	type="hidden"
			name="redirectTo"
			value="frontend.detail.page">
	<input	type="hidden"
			name="redirectParameters"
			value='{"productId": "{{ page.product.id }}"}'>
{% endblock %}

{% block component_account_login_submit %}
	<div class="float-start">
		{{ parent() }}
	</div>
	<div class="login-cancel">
		{% block page_product_detail_faq_form_cancel %}
			<ahref="#"
				class="btn btn-outline-secondary ms-1"
				data-bs-toggle="collapse"
				data-bs-target=".multi-collapse"
				aria-expanded="false"
				aria-controls="faq-form faq-list">
				{{ "faq.buttonCancel"|trans|sw_sanitize }}
			</a>
		{% endblock %}
	</div>
{% endblock %}